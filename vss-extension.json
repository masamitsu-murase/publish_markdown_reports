{
    "manifestVersion": 1,
    "id": "publish-markdown-reports",
    "publisher": "MasamitsuMurase",
    "version": "1.4.0",
    "name": "Publish Markdown Reports",
    "description": "An extension to publish markdown reports in build result tab.",
    "public": true,
    "categories": [
        "Azure Pipelines"
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/masamitsu-murase/publish_markdown_reports"
    },
    "badges": [
        {
            "href": "https://github.com/masamitsu-murase/publish_markdown_reports/actions/workflows/build.yml",
            "uri": "https://github.com/masamitsu-murase/publish_markdown_reports/actions/workflows/build.yml/badge.svg?branch=main",
            "description": "GitHub Actions build for this project."
        }
    ],
    "screenshots": [
        {
            "path": "images/screenshot.png"
        }
    ],
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE.txt"
        }
    },
    "icons": {
        "default": "images/default_icon.png"
    },
    "tags": [
        "Build",
        "Markdown"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "scopes": [
        "vso.build"
    ],
    "contributions": [
        {
            "id": "markdown-tab-in-build-result",
            "type": "ms.vss-build-web.build-results-tab",
            "description": "A tab to show markdown contents.",
            "targets": [
                "ms.vss-build-web.build-results-view"
            ],
            "properties": {
                "name": "Markdown reports",
                "uri": "contents/markdown_tab.html",
                "supportsTasks": [
                    "74f0435e-49d1-4346-834f-94e061a80c78"
                ]
            }
        },
        {
            "id": "custom-build-release-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "PublishMarkdownReports"
            }
        }
    ],
    "files": [
        {
            "path": "images",
            "addressable": true
        },
        {
            "path": "PublishMarkdownReports"
        },
        {
            "path": "contents",
            "addressable": true
        },
        {
            "path": "node_modules/@exampledev/new.css/new.css",
            "addressable": true,
            "packagePath": "contents/new.css"
        },
        {
            "path": "node_modules/marked/marked.min.js",
            "addressable": true,
            "packagePath": "contents/marked.min.js"
        },
        {
            "path": "node_modules/dompurify/dist/purify.min.js",
            "addressable": true,
            "packagePath": "contents/purify.min.js"
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib/VSS.SDK.min.js",
            "addressable": true,
            "packagePath": "contents/lib/VSS.SDK.min.js"
        }
    ]
}
